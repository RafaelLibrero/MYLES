<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MYLES.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/orange300</item>
        <item name="colorPrimaryVariant">@color/orange900</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/varela</item>
    </style>

    <style name="Theme.MYLES.Login" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/orange900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/navyblue</item>
        <item name="colorSecondaryVariant">@color/orange900A30</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/varela</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="Theme.MYLES.eventos" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/navyblue</item>
        <item name="colorPrimaryVariant">@color/orange900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange900</item>
        <item name="colorSecondaryVariant">@color/orange600</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/varela</item>
        <item name="android:textColor">@color/navyblue</item>
        <item name="android:backgroundTint">@color/orange600</item>
        <item name="cornerRadius">25dp</item>
    </style>

    <style name="Theme.MYLES.Login.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MYLES.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MYLES.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>